<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="54dp"
    android:paddingVertical="48dp"
    android:layout_gravity="center"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/confirmation_dialog_bg">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_sukses"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/confirmation_dialog_text"
        style="@style/Deagle.Text.Title.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sukses \nDitambahkan"
        android:lines="2"
        android:singleLine="false"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kembali_button"
        style="@style/Deagle.Text.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/btn_color"
        app:cornerRadius="8dp"
        android:text="Kembali"
        android:textColor="?attr/colorOnPrimary"/>

</LinearLayout>